{
    "extends": "standard",
    "rules": {
        "semi": [2, "always"],
        "no-extra-semi": 2,
        "padded-blocks"   : 0,
        "one-var"         : ["error", "consecutive"],
        "indent"          : ["error", 4],
        "no-multi-spaces" : ["error", {
            "exceptions": {
                "VariableDeclarator"   : true,
                "AssignmentExpression" : true,
                "LogicalExpression"    : true
            }
        }],
        "key-spacing"     : [2, {
            "singleLine": {
                "beforeColon": true,
                "afterColon": true
            },
            "multiLine": {
                "beforeColon": true,
                "afterColon": true,
                "align": "colon"
            }
        }]
    }
}
